<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Convert Suhu"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="65dp"
        android:text="Celcius"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:id="@+id/editCelcius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView2"
        android:layout_alignBottom="@id/textView2"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_toEndOf="@id/textView4"
        android:layout_toRightOf="@id/textView4"
        android:ems="10"
        android:hint="Masukkan Celcius"
        android:inputType="number" />

    <Button
        android:id="@+id/btnKonvert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editCelcius"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="-183dp"
        android:onClick="konversisuhu"
        android:text="Convert"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="82dp"
        android:text="Kelvin"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/editKelvin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView3"
        android:layout_alignLeft="@id/editCelcius"
        android:layout_alignBottom="@id/textView3"
        android:ems="10"
        android:hint="Hasil dalam Kelvin"
        android:inputType="number"
        android:textSize="14sp"
        android:textStyle="normal|bold" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editKelvin"
        android:layout_marginTop="13dp"
        android:text="Reamur"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/editReamur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView4"
        android:layout_alignStart="@id/editKelvin"
        android:layout_alignLeft="@id/editKelvin"
        android:layout_alignBottom="@id/textView4"
        android:ems="10"
        android:hint="Hasil dalam Reamur"
        android:inputType="number"
        android:textSize="14sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="184dp"
        android:onClick="keluar"
        android:text="EXIT" />
</RelativeLayout>